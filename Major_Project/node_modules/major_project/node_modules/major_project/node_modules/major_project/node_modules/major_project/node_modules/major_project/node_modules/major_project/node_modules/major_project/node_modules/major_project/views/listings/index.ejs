<% layout("/layouts/boilerplate") %>
  <body>
    <h1>All Listings</h1>

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <%for(listing of allListings){%>
      <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col">
      <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height:20rem">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">
          <b><%=listing.title%></b></p><br>
          <%=listing.price.toLocaleString("en-IN")%> /night</p>
      </div>
    </div>
  </a>
    <%}%>
  </div>
  </body>
